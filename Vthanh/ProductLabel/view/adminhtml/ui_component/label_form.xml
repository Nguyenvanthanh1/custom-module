<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">label_form.label_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Label Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save">
                <url path="*/*/save" />
                <class>primary</class>
                <label translate="true">Save Label</label>
            </button>
            <button name="back">
                <url path="*/*/back" />
                <class>back</class>
                <label translate="true">Back</label>
            </button>
        </buttons>
        <namespace>label_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>label_form.label_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="label_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="plabel/label/save" />
        </settings>
        <dataProvider class="Vthanh\ProductLabel\Model\Label\DataProvider" name="label_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>label_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="label_form_fieldset">
        <settings>
            <label translate="true">Label Settings</label>
        </settings>

        <field name="label_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">label</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>label_id</dataScope>
            </settings>
        </field>
        <field name="title" formElement="input" sortOrder="2">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">label</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Title</label>
                <dataType>text</dataType>
                <dataScope>title</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="store" formElement="multiselect" class="Magento\Store\Ui\Component\Form\Field\StoreView" sortOrder="4">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">label</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <label translate="true">Store View</label>
                <dataScope>store_ids</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Vthanh\ProductLabel\Ui\Component\Listing\Column\Label\Options" />
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="position" formElement="select" sortOrder="5">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">label</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                    <additionalClasses>
                        <class name="select_position">true</class>
                    </additionalClasses>
                <dataType>int</dataType>
                <label translate="true">Position</label>
                <dataScope>position</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Vthanh\ProductLabel\Ui\Component\Column\Position" />
                    </settings>
                </select>
            </formElements>
        </field>
        <htmlContent name="position_view_content">
            <block class="Vthanh\ProductLabel\Block\Image" name="image.template.preview" template="Vthanh_ProductLabel::label/view.phtml"/>
        </htmlContent>
        <field formElement="fileUploader" name="image_label">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">label</item>
                </item>
            </argument>
            <settings>
                <dataType>file</dataType>
                <label translate="true">Image Label</label>
                <dataScope>image_label</dataScope>
            </settings>
            <formElements>
                <fileUploader>
                    <settings>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">plabel/label_image/saveImage</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_Catalog/image-preview</previewTmpl>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                    </settings>

                </fileUploader>
            </formElements>
        </field>
        <field name="from_date" formElement="date" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">label</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Start Time</label>
                <dataScope>from_date</dataScope>
            </settings>
        </field>
        <field name="to_date" formElement="date" sortOrder="11">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">label</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">End Time</label>
                <dataScope>to_date</dataScope>
            </settings>
        </field>
        <field name="is_active" sortOrder="1" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">label</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Label</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <htmlContent name="block_promo_label_edit_tab_conditions" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="wrapper" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Conditions Label</item>
                    <item name="collapsible" xsi:type="boolean">true</item>
                    <item name="opened" xsi:type="boolean">false</item>
                </item>
            </argument>
            <settings>
                <wrapper>
                    <canShow>true</canShow>
                    <componentType>fieldset</componentType>
                </wrapper>
            </settings>
            <block class="Vthanh\ProductLabel\Block\Adminhtml\Promo\Catalog\Edit\Tab\Conditions" name="promo_label_edit_tab"/>
        </htmlContent>
    </fieldset>
</form>
